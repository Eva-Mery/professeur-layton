{% extends 'frontoffice.html.twig' %}

{% block title %}Salon de thé{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Salon de thé</h1>

    <ul>
        {% if videos is defined and videos is not empty %}
            {% set i = 0 %}
            {% for video in videos %}
                <tr>
                    <td>{{ video.nom }}</td>
                    <br>
                    <td>
                        <iframe src="https://www.youtube.com/embed/{{ tabURL[i] }}" frameborder="0"></iframe>
                    </td>
                    <br>
                </tr>
                {% set i = i + 1 %}
            {% endfor %}
        {% else %}
            <li>
                Aucune vidéo trouvée dans la base... :(
            </li>
        {% endif %}
    </ul>

    <section>
        <header>
            <h2>Vous souhaitez nous contacter ?</h2>
        </header>
        <div>
            <form>
                <fieldset>
                    <legend>Laissez-nous un message</legend>
                    <label for="prenom">Prénom *</label>
                    <input class="form-align" type="text" name="prenom" id="prenom" required placeholder="Jean">

                    <label for="nom">Nom *</label>
                    <input class="form-align" type="text" name="nom" id="nom" required placeholder="Dupont">

                    <label for="mail">Adresse électronique *</label>
                    <input class="form-align" type="email" name="mail" id="mail" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" size="30" required placeholder="jean.dupont@example.com">

                    <label for="message">Message</label>
                    <input class="form-align" type="message" name="message" id="message" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" size="140" placeholder="Votre petit message">
                </fieldset>

                <input type="submit" value="Valider">
            </form>
        </div>
    </section>
</div>
{% endblock %}
