{% extends 'backoffice.html.twig' %}

{% block title %}Index des personnages{% endblock %}

{% block body %}
    <h1>Index des personnages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Photo</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character.id }}</td>
                <td>{{ character.name }}</td>
                <td>{{ character.picture|raw }}</td>
                <td>{{ character.description|raw }}</td>

                <td>
                    <a href="{{ path('e_m_character_show', {'id': character.id}) }}">Voir</a>
                    <a href="{{ path('e_m_character_edit', {'id': character.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de personnages trouv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('e_m_character_new') }}">Ajouter un personnage</a>
{% endblock %}
