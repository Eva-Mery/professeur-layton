{% extends 'backoffice.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ character.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ character.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('e_m_character_index') }}">back to list</a>

    <a href="{{ path('e_m_character_edit', {'id': character.id}) }}">edit</a>

    {{ include('em_character/_delete_form.html.twig') }}
{% endblock %}
