{% extends 'frontoffice.html.twig' %}

{% block title %}Personnages des jeux{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les personnages des jeux</h1>

    <ul>
        {% if characters is defined and characters is not empty %}        
            {% for character in characters %}
                <tr>
                    <td>{{ character.name }}</td>
                    <td>{{ character.picture|raw }}</td>
                    <td>{{ character.description|raw }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <li>
                Aucun personnage trouv√© dans la base... :(
            </li>
        {% endif %}
    </ul>
</div>
{% endblock %}
